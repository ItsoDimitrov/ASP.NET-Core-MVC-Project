
@{
    ViewData["Title"] = "Details";
}

@model FMCApp.Web.Models.ViewModels.VisualizationModels.Movies.MovieDetailsViewModel
    <div class="card">
        <div class="row">
            <aside class="col-sm-5 border-right">
                <article class="gallery-wrap">
                    <div class="img-big-wrap">
                        <div>
                            <img src="@Model.MoviePosterUrl" width="380" height="700" class="img-responsive">
                        </div>
                    </div> <!-- slider-product.// -->
                </article> <!-- gallery-wrap .end// -->
            </aside>
            <aside class="col-sm-7">
                <article class="card-body p-5">
                    <h3 class="title mb-3">@Model.Title</h3>
          
                    <hr style="background-color: black">
                    <dl class="item-property">
                        <dt>Genre:</dt>
                        <dd>
                            <p>@Model.Genre</p>
                        </dd>
                    </dl>
                    <dl class="item-property">
                        <dt>Description:</dt>
                        <dd>
                            <p>
                                @Model.Description
                            </p>
                        </dd>
                    </dl>
                    <dl class="param param-feature">
                        <dt>Release Date:</dt>
                        <dd>@Model.ReleaseDate.Value.ToShortDateString() @Model.ReleaseDate.Value.Year</dd>
                    </dl>
                    <dl class="param param-feature">
                        <dt>Director:</dt>
                        <dd> <a asp asp-controller="Directors" asp-action="Details" asp-route-directorName="@Model.Director" >@Model.Director</a></dd>
                    </dl>  <!-- item-property-hor .// -->
                    <hr />
                    @if (!string.IsNullOrEmpty(ViewBag.message))
                    {
                        <button type="button" class="btn btn-lg btn-info-outline-outline text-uppercase" disabled>@ViewBag.message</button>
                    }
                    <form asp-controller="Movies" asp-action="AddToWatchlist" asp-route-id="@Model.Id" method="post">
                        <button type="submit" id="addToWatchlist" class="btn btn-lg btn-success text-uppercase">+ Add to Watchlist</button>
                    </form>
                    <a asp-controller="UserReviews" asp-action="Comments" asp-route-id="@Model.Id" class="btn btn-lg btn-info text-uppercase">User Reviews</a>
                </article> <!-- card-body.// -->
            </aside> <!-- col.// -->
        </div> <!-- row.// -->
    </div> <!-- card.// -->
<!--container.//-->
