
@{
    ViewData["Title"] = "AllUsers";
}
@model FMCApp.ViewModels.ViewModels.VisualizationModels.Users.Administration.AllUsersViewModel
<div class="row">


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
    @foreach (var user in @Model.Users)
    {


        <tr>
            <th scope="row">@user.Id</th>
            <td>@user.Username</td>
            <td>@user.Email</td>
            <td>
                <form asp-controller="Administrators" asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-danger text-uppercase">Delete account</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>